<div class="container">
    <h1 class="mt-5">My Tasks</h1>
    <ul class="list-group my-5">
        <% @tasks.each do |task| %>
        <li class="list-group-item d-flex w-50">
            <% if task.completed %>
            <i class="far fa-check-square mt-1 mr-3"></i>
            <%else %>
            <i class="far fa-square  mt-1 mr-3"></i>
            <%end%>
            <%= link_to task.title, task_path(task) %>
            <%= link_to ('<i class="fa fa-trash"></i>').html_safe, task_path(task), method: :delete, class: "ml-3 text-secondary" %>
        </li>
        <%end%>
    </ul>
    <hr />
    <div class="d-flex mt-3">
        <i class="fas fa-plus mt-1 mr-3 text-primary"></i>
        <%= link_to "Add a new task", new_task_path, class: "text-primary" %>
    </div>
</div>