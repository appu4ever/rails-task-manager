<div class="container mt-5">
    <div class="d-flex justify-content-between">
        <h1><%= @task.title %></h1>
        <%= link_to "Edit this task", edit_task_path, class: "btn btn-outline-secondary align-self-center" %>
    </div>

    <div class="jumbotron">
        <p class="lead"><%= @task.details %></p>
    </div>
    <div class="d-flex justify-content-left mb-5">
        <%if @task.completed %>
        <i class="far fa-check-square mt-1 mr-3"></i>
        <p>This task is completed</p>
        <%else%>
        <i class="far fa-square  mt-1 mr-3"></i>
        <p>This task is not completed</p>
        <%end%>
    </div>
    <hr />
    <%= link_to "Back to List", tasks_path %>
</div>