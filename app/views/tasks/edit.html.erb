<div class="container mt-5">
    <h1>Edit Task</h1>
    <div class="w-50">
        <%= simple_form_for @task do |f| %>
        <div class="form-group">
            <label class="font-weight-bold">Title</label>
            <%= f.input_field :title, class: "form-control" %>
        </div>
        <div class="form-group">
            <label class="font-weight-bold">Details</label>
            <%= f.input_field :details, as: :text, class: "form-control" %>
        </div>
        <%= f.input_field :completed, as: :boolean, boolean_style: :inline %>
        <label class="font-weight-bold">Completed</label>
        <div class="my-3">
            <%= f.button :submit, class: "btn btn-primary" %>
        </div>

        <% end %>
    </div>


    <hr />
    <div class="d-flex">
        <i class="fas fa-undo mt-1 mr-3 text-primary"></i>
        <%= link_to "Back to List", tasks_path, class: "text-primary" %>
    </div>


</div>